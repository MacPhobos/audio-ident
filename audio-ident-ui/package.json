{
	"name": "audio-ident-ui",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port ${PORT:-17000}",
		"build": "vite build",
		"preview": "vite preview --port ${PORT:-17000}",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"gen:api": "openapi-typescript ${VITE_API_BASE_URL:-http://localhost:17010}/openapi.json -o src/lib/api/generated.ts"
	},
	"dependencies": {
		"@sveltejs/adapter-auto": "^7.0.1",
		"@sveltejs/kit": "^2.51.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/svelte-query": "^6.0.18",
		"lucide-svelte": "^0.564.0",
		"svelte": "^5.51.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"zod": "^4.3.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^25.2.3",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"jsdom": "^28.0.0",
		"openapi-typescript": "^7.13.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte-check": "^4.4.0",
		"typescript-eslint": "^8.55.0",
		"vitest": "^4.0.18"
	}
}
